// ------------------------------
// Rules to control the lighting
// ------------------------------


rule "All lights on"
  when 
    Item SW_HUE_ALL received command
  then
    if (receivedCommand == ON) {
        CL_HUE_LS.sendCommand("ON")
        CL_HUE_DL.sendCommand("ON")
        CL_HUE_ST.sendCommand("ON")
        CL_HUE_KS.sendCommand("ON")
    } else {
        CL_HUE_LS.sendCommand("OFF")
        CL_HUE_DL.sendCommand("OFF")
        CL_HUE_ST.sendCommand("OFF")
        CL_HUE_KS.sendCommand("OFF")
    }
  end

rule "Dim all lights"
  when 
    Item CL_HUE_ALL received command
  then
    CL_HUE_LS.sendCommand(receivedCommand)
    CL_HUE_DL.sendCommand(receivedCommand)
    CL_HUE_ST.sendCommand(receivedCommand)
    CL_HUE_KS.sendCommand(receivedCommand)
  end
