  end

rule "Wohnzimmerlicht CT"
  when 
    Item HUE_MODE_WZ_CT received command
  then
    HUE_LAMP_WZD_CT.sendCommand(receivedCommand)
    HUE_LAMP_WZW_CT.sendCommand(receivedCommand)
    HUE_LAMP_EZD_CT.sendCommand(receivedCommand)
  end
