// ------------------------------
// Rules to control the lighting
// ------------------------------


rule "All lights on"
  when 
    Item SW_HUE_ALL received command
  then
    if (receivedCommand == ON) {
        SW_HUE_LS.sendCommand("ON")
        SW_HUE_DL.sendCommand("ON")
        SW_HUE_ST.sendCommand("ON")
        SW_HUE_KS.sendCommand("ON")
    } else {
        SW_HUE_LS.sendCommand("OFF")
        SW_HUE_DL.sendCommand("OFF")
        SW_HUE_ST.sendCommand("OFF")
        SW_HUE_KS.sendCommand("OFF")
    }
  end

rule "Dim all lights"
  when 
    Item DM_HUE_ALL received command
  then
    DM_HUE_LS.sendCommand(receivedCommand)
    DM_HUE_DL.sendCommand(receivedCommand)
    DM_HUE_ST.sendCommand(receivedCommand90)
    DM_HUE_KS.sendCommand(receivedCommand)
  end
