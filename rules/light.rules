// ------------------------------
// Rules to control the lighting
// ------------------------------

rule "All lights"
  when 
    Item HUE_MODE_ALL received command
  then
    HUE_LAMP_SL.sendCommand(receivedCommand)
    HUE_LAMP_SD.sendCommand(receivedCommand)
    HUE_LAMP_FL.sendCommand(receivedCommand)
    HUE_LAMP_SD.sendCommand(receivedCommand)
    HUE_LAMP_ED.sendCommand(receivedCommand)
    OSRAM_KUECHE_STRIP.sendCommand(receivedCommand)
  end

rule "Schlafzimmerlicht"
  when 
    Item HUE_MODE_SZ received command
  then
    HUE_LAMP_SL.sendCommand(receivedCommand)
    HUE_LAMP_SD.sendCommand(receivedCommand)
  end

rule "Wohnzimmerlicht"
  when 
    Item HUE_MODE_WZ received command
  then
    HUE_LAMP_SD.sendCommand(receivedCommand)
  end

rule "Wohnzimmerlicht"
  when 
    Item HUE_MODE_EZ received command
  then
    HUE_LAMP_ED.sendCommand(receivedCommand)
  end