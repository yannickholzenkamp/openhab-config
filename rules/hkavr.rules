// ------------------------------
// Rules to control the HK AVR
// ------------------------------


rule "Power AVR on/off"
  when 
    Item SW_HKAVR received command
  then
    if (receivedCommand == ON) {
        HARMONY_HKAVR.sendCommand("PowerOn")
    } else {
        HARMONY_HKAVR.sendCommand("PowerOff")
    }
  end
