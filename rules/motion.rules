rule "HUE_MOTION_FLUR"
    when
    	Item HUE_MOTION_FLUR changed
    then
      logInfo("motion.rules", "Motion sensor presence detected")
      if(HUE_MOTION_FLUR.state == ON){
        CL_HUE_WZ.sendCommand(0)
        
        createTimer(now.plusSeconds(10)) [|
            CL_HUE_WZ.sendCommand(100)	
            OSRAM_KUECHE_STRIP.sendCommand("ON")
        ]

        createTimer(now.plusSeconds(30)) [|
            CL_HUE_WZ.sendCommand(0)	
            OSRAM_KUECHE_STRIP.sendCommand("OFF")
        ]

        createTimer(now.plusSeconds(60)) [|
            CL_HUE_WZ.sendCommand(100)	
        ]
}
end