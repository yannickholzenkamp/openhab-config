rule "HUE_MOTION_FLUR"
    when
    	Item Hue_Motion_Flur changed
    then
      logInfo("motion.rules", "Flur Motion sensor presence detected")
      if(Hue_Motion_Flur.state == ON){
        DM_HUE_FL.sendCommand(100)
        
        createTimer(now.plusSeconds(30)) [|
            DM_HUE_FL.sendCommand(50)
        ]

        createTimer(now.plusSeconds(60)) [|
            DM_HUE_FL.sendCommand(0)
        ]
}
end