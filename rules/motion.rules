var Timer delay= null
rule "Motion_Sensor"
    when
    	Item Motion_Sensor changed
    then
      if(Motion_Sensor.state == ON){
        CL_HUE_WZ.sendCommand(100)
        
         //Turn off the light after 60 seconds
         delay = createTimer(now.plusSeconds(60)) [|
		CL_HUE_WZ.sendCommand(0)	
	]
}
end