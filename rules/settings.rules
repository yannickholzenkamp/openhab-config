rule "Fernsehen an"
  when 
    Item SW_SETTINGS_FERNSEHEN received command
  then
    if (receivedCommand == ON) {
      // Turn TV, AVR & Apple TV on
      HARMONY_APLTV.sendCommand("Home")
      HARMONY_LGTV.sendCommand("PowerOn")
      Thread::sleep(1000)
      HARMONY_HKAVR.sendCommand("PowerOn")
      logInfo("settings.rules", "State WZ: " + HUE_MODE_WZ.state.toString)
      if (HUE_MODE_WZ.state.toString != "0" && HUE_MODE_WZ.state.toString != "NULL") {
        HUE_MODE_WZ.sendCommand(20)
        HUE_MODE_WZ_CT.sendCommand(70)
      }
    } else {
      HARMONY_APLTV.sendCommand("Home")
      Thread::sleep(1000)
      HARMONY_APLTV.sendCommand("Home")
      HARMONY_LGTV.sendCommand("PowerOff")
      Thread::sleep(1000)
      HARMONY_HKAVR.sendCommand("PowerOff")
      HARMONY_HKAVR.sendCommand("PowerOff")
    }
  end

rule "Fernsehen an"
when
  Item SW_SETTINGS_SOMETHING received command
then
  if (receivedCommand == ON) {
    logInfo("settings.rules", "Step: 1")
    HARMONY_HKAVR.sendCommand("Home")
    Thread::sleep(1000)
    logInfo("settings.rules", "Step: 2")
    HARMONY_HKAVR.sendCommand("Menu")
    Thread::sleep(1000)
    logInfo("settings.rules", "Step: 3")
    HARMONY_APLTV.sendCommand("DirectionRight")
    Thread::sleep(1000)
    logInfo("settings.rules", "Step: 4")
    HARMONY_APLTV.sendCommand("Select")
  } else {

  }
end

