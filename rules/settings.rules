rule "Fernsehen an, Lichter dimmen 1"
  when 
    Item SW_SETTINGS_FERNSEHEN received command
  then
    if (receivedCommand == ON) {
      // Turn TV, AVR & Apple TV on
      HARMONY_APLTV.sendCommand("Home")
      HARMONY_LGTV.sendCommand("PowerOn")
      Thread::sleep(1000)
      HARMONY_HKAVR.sendCommand("PowerOn")
      CL_WOHNZIMMER.sendCommand(20)
    } else {
      HARMONY_APLTV.sendCommand("Home")
      Thread::sleep(1000)
      HARMONY_APLTV.sendCommand("Pause")
      HARMONY_APLTV.sendCommand("Home")
      HARMONY_LGTV.sendCommand("PowerOff")
      Thread::sleep(1000)
      HARMONY_HKAVR.sendCommand("PowerOff")
      HARMONY_HKAVR.sendCommand("PowerOff")
      logInfo("settings.rules", "SW_SETTINGS_FERNSEHEN_LIGHTS.state " + SW_SETTINGS_FERNSEHEN_LIGHTS.state)
      if (SW_SETTINGS_FERNSEHEN_LIGHTS.state == "") {
        HUE_MODE_WZ.sendCommand(100)
      }
    }
    SW_SETTINGS_FERNSEHEN_LIGHTS.postUpdate("")
  end

